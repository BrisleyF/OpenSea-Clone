<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet</title>
    <%- include('../views/partials/head.ejs'); %>
    <link rel="stylesheet" href="/css//wallet.css">
</head>
<body>
    <header>
        <%- include('../views/partials/header.ejs'); %>
    </header>

    <main>
        <div class="contenedor-header">
            <div><h3>Mi wallet</h3></div>
            <div><p><%= usuario._id %></p></div>
        </div>
        <div class="contenedor-balance">
            <div>
                <p>Saldo total</p>
                <h3><%= usuario.wallet.balance %> $</h3>
            </div>
            <div>
                <form action="/depositar" method="post">
                    <label for="">AÃ±adir fondos</label>
                    <input type="text" placeholder="Introducir el monto" name="monto">
                    <button>Depositar</button>
                </form>
            </div>
        </div>
        <div class="titulo"><h3>Mis propiedades</h3></div>
        <div class="contenedor-articulos">
            <% for(const articulo of articulos) { %>
            <div class="imagen">
                <img src="<%= articulo.imageArticulo %>" alt="<%= articulo.nombre %>" width="50" height="50">
            </div>
            <div class="nombre">
                <h4><%= articulo.nombre %></h4>
            </div>
            <div class="creador">
                <h4><%= articulo.creador.nombre %></h4>
            </div>
            <div class="propietario">
                <h4><%= articulo.propietario %></h4>
            </div>
            <div class="precio">
                <h4><%= articulo.precio %> $</h4>
            </div>
            <% } %>
        </div>
    </main>

    <script src="https://kit.fontawesome.com/dd5e87f640.js" crossorigin="anonymous"></script>
</body>
</html>